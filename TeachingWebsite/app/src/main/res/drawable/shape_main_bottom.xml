<?xml version="1.0" encoding="UTF-8"?>
<!--底部tab菜单的上边框颜色-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#A2A2A2" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item android:top="1dp"> <!--设置只有顶部有边框-->
        <shape>
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>