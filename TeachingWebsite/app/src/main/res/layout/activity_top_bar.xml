<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="@color/colorMain"
    >

    <ImageView
        android:id="@+id/id_top_bar_img"
        android:src="@drawable/icon_arrow_left_24dp"
        android:scaleType="centerInside"
        android:layout_width="60dp"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/id_top_bar_title"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/id_top_bar_sign"
        android:paddingRight="6dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/id_top_bar_done"
        android:visibility="gone"
        android:src="@drawable/icon_done"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        android:layout_width="60dp"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/id_top_bar_download"
        android:visibility="gone"
        android:src="@drawable/icon_course_download_24dp"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        android:layout_width="60dp"
        android:layout_height="match_parent"/>

</RelativeLayout>
