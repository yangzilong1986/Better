<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:background="@drawable/profile_bg"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/id_myself_settings"
            android:src="@drawable/icon_settings"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_myself_img"
            android:src="@drawable/icon_user_img_default"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:civ_border_color="#FFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            />

        <TextView
            android:id="@+id/id_myself_username"
            android:layout_below="@+id/id_myself_img"
            android:text="someone_xiaole"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/id_myself_intro"
            android:layout_below="@+id/id_myself_username"
            android:text="better life,better you"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorDefaultGray"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <include layout="@layout/activity_myself_bottom" />


</LinearLayout>
