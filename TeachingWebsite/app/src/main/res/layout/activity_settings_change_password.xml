<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
    >

    <include layout="@layout/activity_top_bar" />

    <TextView
        android:text="@string/text_settings_old_password"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/id_settings_old_password_text"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        app:met_maxCharacters="16"
        app:met_primaryColor="@color/colorMain"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="60dp"/>

    <TextView
        android:text="@string/text_settings_new_password"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/id_settings_new_password_text"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        app:met_maxCharacters="16"
        app:met_primaryColor="@color/colorMain"
        android:inputType="textPassword"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="60dp"/>

</LinearLayout>
